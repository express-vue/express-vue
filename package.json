{
  "name": "express-vue",
  "version": "4.0.12",
  "description": "Vue rendering engine for Express.js",
  "homepage": "https://github.com/express-vue/express-vue",
  "author": {
    "name": "Daniel Cherubini",
    "email": "daniel@cherubini.casa",
    "url": "https://cherubini.casa"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "vue",
    "express",
    "node"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.js",
      "!test/example/**/*.js"
    ],
    "source": [
      "src/**/*.js",
      "!lib/**/*"
    ],
    "concurrency": 5,
    "failFast": false,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "**/*.vue"
    ],
    "include": [
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "codecov": "^2.3.0",
    "del": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-xo-space": "^0.16.0",
    "eslint-plugin-babel": "^4.1.2",
    "express": "^4.16.1",
    "flow-bin": "^0.56.0",
    "flow-remove-types": "^1.2.1",
    "generate-release": "^0.14.0",
    "ncp": "^2.0.0",
    "nsp": "^2.8.1",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2"
  },
  "eslintConfig": {
    "extends": "xo-space",
    "env": {
      "mocha": true
    }
  },
  "repository": "express-vue/express-vue",
  "scripts": {
    "start": "node test/example/index.js",
    "debug": "node --inspect test/example/index.js",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run copy",
    "copy": "ncp src lib && babel lib -d lib",
    "release": "generate-release",
    "prepublish": "npm run build",
    "test": "eslint lib && nsp check && nyc ava",
    "preversion": "npm test",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "debug": "^2.6.9",
    "express-vue-renderer": "^0.7.1"
  }
}
