{
  "name": "express-vue",
  "version": "3.15.0",
  "description": "Vue rendering engine for Express.js",
  "homepage": "https://github.com/express-vue/express-vue",
  "author": {
    "name": "Daniel Cherubini",
    "email": "daniel@cherubini.casa",
    "url": "https://cherubini.casa"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "vue",
    "express",
    "node"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "lib/**/*.js",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": false,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.0",
    "del": "^3.0.0",
    "eslint": "^4.0.0",
    "eslint-config-xo-space": "^0.16.0",
    "eslint-plugin-babel": "^4.0.0",
    "express": "^4.14.0",
    "flow-bin": "^0.48.0",
    "gulp": "^3.9.1",
    "gulp-ava": "^0.17.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^4.0.0",
    "gulp-exclude-gitignore": "^1.1.1",
    "gulp-line-ending-corrector": "^1.0.1",
    "gulp-nsp": "^2.4.2",
    "nyc": "^11.0.2"
  },
  "eslintConfig": {
    "extends": "xo-space",
    "env": {
      "mocha": true
    }
  },
  "repository": "express-vue/express-vue",
  "scripts": {
    "start": "gulp",
    "build": "gulp build",
    "prepublish": "gulp build",
    "test": "eslint lib && nyc ava",
    "preversion": "npm test",
    "version": "gulp build && git add -A",
    "postversion": "git push && git push --tags",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "camel-case": "^3.0.0",
    "clean-css": "^4.1.2",
    "gulp-livereload": "^3.8.1",
    "gulp-nodemon": "^2.2.1",
    "html-minifier": "^3.4.3",
    "node-cache": "^4.1.1",
    "param-case": "^2.1.1",
    "pug": "^2.0.0-rc.2",
    "require-from-string": "^1.2.1",
    "vue": "^2.3.0",
    "vue-server-renderer": "^2.3.0",
    "xss": "^0.3.1"
  }
}
