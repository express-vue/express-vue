{
  "name": "express-vue",
  "version": "5.15.3",
  "description": "Vue rendering engine for Express.js",
  "homepage": "https://github.com/express-vue/express-vue",
  "author": {
    "name": "Daniel Cherubini",
    "email": "daniel@cherubini.casa",
    "url": "https://cherubini.casa"
  },
  "files": [
    "lib",
    "bin"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "express-vue": "bin/index.js"
  },
  "keywords": [
    "vue",
    "express",
    "node"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.js",
      "!test/example/**/*.js"
    ],
    "sources": [
      "lib/**/*.js"
    ],
    "failFast": false,
    "powerAssert": false,
    "babel": {
      "testOptions": {
        "babelrc": false,
        "configFile": false
      }
    }
  },
  "nyc": {
    "exclude": [
      "**/*.vue"
    ],
    "include": [
      "lib/**/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "vue",
      "@typescript-eslint"
    ],
    "rules": {
      "no-useless-escape": "off",
      "no-prototype-builtins": "off"
    }
  },
  "eslintIgnore": [
    "coverage",
    "example",
    "tests"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/express": "^4.17.8",
    "@types/node": "^10.17.44",
    "ava": "^1.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "codecov": "^3.8.1",
    "del": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-xo-space": "^0.21.0",
    "eslint-plugin-babel": "^5.3.1",
    "express": "^4.17.1",
    "generate-release": "^1.1.1",
    "ncp": "^2.0.0",
    "nyc": "^14.1.1",
    "rimraf": "^2.7.1",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  },
  "repository": "express-vue/express-vue",
  "scripts": {
    "start": "node test/example/index.js",
    "debug": "VUE_DEV=true node --inspect test/example/index.js",
    "release": "npm test && generate-release",
    "lint": "eslint lib",
    "test": "npm run lint && nyc ava",
    "preversion": "npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@types/yargs": "^13.0.11",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chalk": "^2.4.2",
    "eslint-plugin-vue": "^5.2.3",
    "figlet": "^1.5.0",
    "vue-pronto": "^2.4.0",
    "yargs": "^13.3.2"
  }
}
